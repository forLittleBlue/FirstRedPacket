<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_empty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.littleblue.autopacket.WannotGroupManActivity">

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:id="@+id/group_layout"
        android:orientation="vertical"
        android:background="@color/light_grey"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/blue_light"
            android:text="群"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/blue_light"
            android:text="示例：吃喝玩乐"/>

        <RelativeLayout
            android:layout_width="105dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:gravity="center" >

            <Button
                android:text="@string/wannot_group_add_button"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:id="@+id/button_wannot_group_add"
                android:elevation="24dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/blue_light"
                android:textSize="18dp"
                android:textStyle="bold"
                style="@style/Widget.AppCompat.Button.Borderless" />

            <com.littleblue.autopacket.OvalView
                android:alpha="0.45"
                android:foregroundGravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="3dp"
                android:layout_width="100dp"
                android:layout_height="35dp"
                app:oval_color="@color/glass_grey"
                app:angle_ratio="2"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/group_divider_top"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_height="1dp"
            android:visibility="invisible"
            android:background="@color/glass_grey"/>

        <ListView
            android:id="@+id/wannot_group_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:divider="@color/glass_grey"
            android:dividerHeight="1dp"
            android:background="@color/blue_light">
        </ListView>

        <ImageView
            android:id="@+id/group_divider_bottom"
            android:layout_width="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_height="1dp"
            android:visibility="invisible"
            android:background="@color/glass_grey"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/man_layout"
        android:layout_toRightOf="@+id/group_layout"
        android:background="@color/light_grey"
        android:layout_marginLeft="5dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/blue_light"
            android:text="个人"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/blue_light"
            android:text="示例：VBack"/>

        <RelativeLayout
            android:layout_width="105dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:gravity="center" >

            <Button
                android:text="@string/wannot_group_add_button"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:id="@+id/button_wannot_man_add"
                android:elevation="24dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/blue_light"
                android:textSize="18dp"
                android:textStyle="bold"
                style="@style/Widget.AppCompat.Button.Borderless" />

            <com.littleblue.autopacket.OvalView
                android:alpha="0.45"
                android:foregroundGravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="3dp"
                android:layout_width="100dp"
                android:layout_height="35dp"
                app:oval_color="@color/glass_grey"
                app:angle_ratio="2"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/man_divider_top"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_height="1dp"
            android:visibility="invisible"
            android:background="@color/glass_grey"/>

        <ListView
            android:id="@+id/wannot_man_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:divider="@color/glass_grey"
            android:dividerHeight="1dp"
            android:background="@color/blue_light">
        </ListView>

        <ImageView
            android:id="@+id/man_divider_bottom"
            android:layout_width="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_height="1dp"
            android:visibility="invisible"
            android:background="@color/glass_grey"/>

    </LinearLayout>



</RelativeLayout>
